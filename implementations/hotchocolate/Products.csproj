  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HotChocolate.AspNetCore" Version="12.6.0" />
    <PackageReference Include="HotChocolate.ApolloFederation" Version="12.6.0" />
  </ItemGroup>

</Project>
